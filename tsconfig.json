{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",

    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },

    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
